<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:L00150620_Geil_Festival.Model"
             xmlns:viewmodel="clr-namespace:L00150620_Geil_Festival.ViewModel"
             x:DataType="viewmodel:StageViewModel"
             x:Class="L00150620_Geil_Festival.View.Stages"
             Title="Stages">

    <ScrollView>
        <VerticalStackLayout>

            <Grid HorizontalOptions="Center">
                <CollectionView BackgroundColor="Transparent"
                                x:Name="BandView"
                                ItemsSource="{Binding Stage}"
                                SelectionMode="None">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Stages">
                            <Frame BackgroundColor="#f6f6db">
                                <Grid
                                    ColumnDefinitions="200"
                                    RowDefinitions="Auto, Auto, Auto, Auto, Auto">

                                    <Image 
                                        Source="{Binding stagephoto}"
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        Aspect="AspectFit"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Margin="0,5,0,5"/>

                                    <Label 
                                        Text="{Binding stage}"
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        FontSize="18"
                                        Margin="0,5,0,5"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"/>

                                    <Label 
                                        Text="Latitude:"
                                        Grid.Column="0"
                                        Grid.Row="2"
                                        FontSize="11"
                                        Margin="5,5,0,5"/>

                                    <Label 
                                        Text="{Binding latitude}"
                                        Grid.Column="0"
                                        Grid.Row="2"
                                        FontSize="11"
                                        Margin="55,5,0,5"/>

                                    <Label 
                                        Text="Latitude:"
                                        Grid.Column="0"
                                        Grid.Row="3"
                                        FontSize="11"
                                        Margin="5,5,0,5"/>

                                    <Label 
                                        Text="{Binding longitude}"
                                        Grid.Column="0"
                                        Grid.Row="3"
                                        FontSize="11"
                                        Margin="55,5,0,10"/>

                                        <Line 
                                        Margin="0,-5,0,5" 
                                        X1="0" 
                                        X2="200" 
                                        HorizontalOptions="Center" 
                                        Stroke="black" 
                                        StrokeDashArray="1,1" 
                                        StrokeDashOffset="6"
                                        Grid.Column="0"
                                        Grid.Row="4"/>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>