<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="L00150620_Geil_Festival.View.Home"
             Title="Welcome to the Géil">
    <ScrollView>
        <VerticalStackLayout>

            <Image Source="logo.jpg"
                       Aspect="AspectFill"
                       HeightRequest="150"
                       WidthRequest="150" />

            <Label 
                Padding="10,10,10,10"
                Text="Welcome to the Géil Music Festival app!"
                FontSize="24"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Image Source="band4.jpg"
                       Aspect="AspectFill"
                       HeightRequest="300"
                       WidthRequest="300" />

            <Label 
                Padding="10,10,10,10"
                Text="This is the home page where a general overview of current events will be displayed for the user to get a taste of whats to come."
                FontAttributes="Italic"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>