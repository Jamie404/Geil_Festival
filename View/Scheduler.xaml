<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="L00150620_Geil_Festival.View.Scheduler"
             Title="Scheduler">
    <ScrollView>
        <VerticalStackLayout>

            <Image Source="logo.jpg"
                       Aspect="AspectFill"
                       HeightRequest="150"
                       WidthRequest="150" />

            <Image Source="schedule.png"
                       Aspect="AspectFill"
                       HeightRequest="300"
                       WidthRequest="300" />

            <Label 
                Padding="10,10,10,10"
                Text="Personal Scheduler Page"
                FontSize="24"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label 
                Padding="10,10,10,10"
                Text="This is where the app user will be able to view their current saved list of chosen lineup sets they wish to attend."
                FontAttributes="Italic"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>